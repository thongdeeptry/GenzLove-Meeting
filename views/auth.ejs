<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">GenzLove Meeting</div>
        <div class="card-body">
          <form action="/join-room" method="POST">
            <div class="col-auto">
              <label class="visually-hidden" for="autoSizingInputGroup"
                >Tên người dùng</label
              >
              <div class="input-group">
                <div class="input-group-text">
                  <ion-icon name="person-outline"></ion-icon>
                </div>
                <input
                  type="text"
                  class="form-control"
                  id="autoSizingInputGroup"
                  placeholder="Tên người dùng"
                />
              </div>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label"
                >Nhập ID Phòng Họp</label
              >
              <input
                required
                name="room_id"
                class="form-control"
                placeholder="ID Phòng"
              />
              <div class="form-text">
                Bạn phải nhập ID phòng để vào một phòng cụ thể.
              </div>
            </div>
            <button
              style="width: 100%"
              type="submit"
              class="btn btn-primary mb-3"
            >
              Tham Gia
            </button>
          </form>
          <form action="/create-room" method="POST">
            <button
              style="width: 100%"
              type="submit"
              class="btn btn-success mb-3"
            >
              Tạo Phòng Mới
            </button>
          </form>
          <a style="width: 100%" type="submit" class="btn btn-danger"
            >Đăng xuất</a
          >
        </div>
      </div>
    </div>
